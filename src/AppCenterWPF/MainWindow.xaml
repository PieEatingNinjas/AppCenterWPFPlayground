<Window x:Class="AppCenterWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Main application" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Button Content="Test crash!" Click="TestCrashButton_Click" />
            <Button Content="'Real' crash!" Click="RealCrashButton_Click"/>
            <Button Content="Catching and logging" Click="CathingAndLoggingButton_Click" />
            <Button Content="Another 'real' crash" Click="RealCrash2Button_Click" />
        </StackPanel>
    </Grid>
</Window>
